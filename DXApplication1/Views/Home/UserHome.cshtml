@using DevExpress.Web.Mvc

@{
    ViewBag.Title = "Kullanıcı Ana Sayfası";
    var shapes = new List<dynamic> {
        new { Name = "Kare", Formula = "Alan = kenar × kenar", ImageUrl = Url.Content("~/Images/square.png"), Type = "square" },
        new { Name = "Dikdörtgen", Formula = "Alan = uzun kenar × kısa kenar", ImageUrl = Url.Content("~/Images/rectangle.png"), Type = "rectangle" },
        new { Name = "Üçgen", Formula = "Alan = (taban × yükseklik) / 2", ImageUrl = Url.Content("~/Images/triangle.png"), Type = "triangle" }
    };
}
